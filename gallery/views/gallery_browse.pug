extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='s_gallery') Select gallery:
      select#s_gallery.form-control(name='s_gallery' required)
        for gallery in galleries
          option(value=gallery._id) #{gallery.name}
    button.btn.btn-primary(type='submit') Submit

  if images.length
    each image in images
      div.container
        //- h2 #{image.name}
        //- a Description: #{image.description}
        img.img-responsive(src=image.path alt=image.path style='height:200px; display:block;')
        
        // Informacje o nazwie i rozmiarze
        p Nazwa: #{image.name} Rozmiar: #{Math.round(image.size / 1024)} KB

        // Przyciski Pokaż, Update, Delete pod każdym obrazem
        div.button-group
          form(action=`/images/${image._id}` method='get' style='display:inline;')
            button.btn.btn-secondary(type='submit') Pokaż
          form(action=`/images/${image._id}/update` method='get' style='display:inline;')
            button.btn.btn-warning(type='submit') Update
          form(action=`/images/${image._id}/delete` method='post' style='display:inline;')
            button.btn.btn-danger(type='submit') Delete

  else
    p There are no any images.

  if errors
    ul
      for error in errors
        li!= error.msg
