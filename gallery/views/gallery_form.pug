extends layout

block content
  h1=title
  form(method='POST')
    div.form-group
      label(for='g_name') Gallery name:
      input#g_name.form-control(type='text', placeholder='Enter gallery name', name='g_name' required value=(undefined===gallery ? '' : gallery.g_name) )
    div.form-group
      label(for='g_description') Description:
      input#g_description.form-control(type='text', placeholder='Enter gallery description', name='g_description' required value=(undefined===gallery ? '' : gallery.g_description) )
    div.form-group
      label(for='g_user') Owner:
      select#g_user.form-control(name='g_user' required)
        option(value='') --Select a user--
        each user in users
          if gallery
            if user._id.toString()===gallery.user._id.toString()
              option(value=user._id selected) #{user.first_name} #{user.last_name}
            else
              option(value=user._id) #{user.first_name} #{user.last_name}
          else
            option(value=user._id) #{user.first_name} #{user.last_name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
